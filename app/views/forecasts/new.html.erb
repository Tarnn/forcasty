<!-- Hero Section -->
<div class="text-center mb-12 animate-fade-in">
  <div class="mx-auto mb-6">
    <svg class="h-20 w-20 mx-auto text-primary animate-pulse-slow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z"/>
    </svg>
  </div>
  <h1 class="text-4xl font-bold tracking-tight text-foreground sm:text-5xl mb-4">
    Weather Forecast
  </h1>
  <p class="text-xl text-muted-foreground max-w-2xl mx-auto leading-relaxed">
    Get accurate weather information for any location with intelligent caching and real-time data
  </p>
</div>

<!-- Main Form Card -->
<div class="max-w-2xl mx-auto">
  <div class="weather-card">
    <div class="card-header text-center">
      <h2 class="card-title text-2xl">Enter Location</h2>
      <p class="card-description">
        Search for weather information by entering any address, city, or landmark
      </p>
    </div>
    
    <div class="card-content">
      <%= form_with url: forecasts_path, scope: :forecast, method: :post, local: true, 
                    class: "space-y-6" do |f| %>
        <div class="space-y-2">
          <%= f.label :address, "Location", class: "text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70" %>
          <div class="relative">
            <svg class="absolute left-3 top-1/2 transform -translate-y-1/2 h-4 w-4 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <%= f.text_field :address, 
                required: true, 
                autofocus: true, 
                placeholder: "e.g., 1600 Amphitheatre Pkwy, Mountain View, CA", 
                class: "input pl-10 h-12 text-base" %>
          </div>
          <p class="text-xs text-muted-foreground">
            Enter any address, city name, or landmark to get weather information
          </p>
        </div>

        <div class="flex flex-col sm:flex-row gap-3">
          <%= f.submit "Get Weather Forecast", 
              class: "btn-primary h-12 text-base font-semibold flex-1 transition-all duration-200 hover:scale-[1.02] active:scale-[0.98]" %>
          <button type="button" 
                  onclick="document.getElementById('forecast_address').value='Times Square, New York, NY'; this.closest('form').submit();"
                  class="btn-outline h-12 text-base font-medium hover:scale-[1.02] active:scale-[0.98] transition-all duration-200">
            Example: Times Square
          </button>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Quick Examples -->
  <div class="text-center pt-8 border-t border-border">
    <h3 class="text-lg font-semibold text-foreground mb-4">Try Other Locations</h3>
    <div class="flex flex-wrap justify-center gap-2">
      <% [
        "Golden Gate Bridge, San Francisco, CA",
        "Space Needle, Seattle, WA",
        "Hollywood Sign, Los Angeles, CA"
      ].each do |location| %>
        <%= form_with url: forecasts_path, scope: :forecast, method: :post, local: true,
                      class: "inline-block" do |f| %>
          <%= f.hidden_field :address, value: location %>
          <%= f.submit location.split(',').first,
              class: "inline-flex items-center px-3 py-1.5 rounded-full text-xs font-medium bg-secondary text-secondary-foreground hover:bg-secondary/80 transition-colors cursor-pointer" %>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Error Display -->
  <% if flash[:alert] %>
    <div class="mt-6 animate-slide-up">
      <div class="rounded-lg border border-red-200 bg-red-50 px-4 py-3">
        <div class="flex items-center">
          <svg class="h-5 w-5 text-red-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <p class="text-sm font-medium text-black">
            <%= flash[:alert] %>
          </p>
        </div>
      </div>
    </div>
  <% end %>

</div>


